<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="root" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hit.controller.UserEditorController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>
    <VBox spacing="10">
        <Label alignment="center" contentDisplay="center" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Welcome to Process Scheduler Illustrator Program." />
        <Label alignment="center" contentDisplay="center" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Please insert your name." />
    </VBox>
<!--    <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />-->
    <HBox alignment="CENTER" spacing="16" GridPane.rowIndex="1">
        <Label text="Username:" />
        <TextField fx:id="usernameField" alignment="CENTER_LEFT" disable="true" focusTraversable="false" maxWidth="175" prefWidth="175" />
    </HBox>
    <HBox alignment="center" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button fx:id="startButton" disable="true" onAction="#startButtonPressed" text="Start" />
        <Button fx:id="cancelButton" onAction="#cancelButtonPressed" text="Cancel" />
    </HBox>
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" />
    </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
